<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/discordbtn"
        android:layout_width="72dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/usersArts"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcherardiscord" />

    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:layout_alignTop="@+id/chatRoom"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/artanimephoto"
        app:srcCompat="@drawable/artanimelogo" />

    <ImageButton
        android:id="@+id/artAnimeFacebook"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcherfacebook"
        android:text="@string/facebook"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/acsTrack2"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:adjustViewBounds="false"
        android:background="#0000"
        android:cropToPadding="false"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcheracs"
        android:text="ΕΥΡΕΣΗ ΑΠΟΣΤΟΛΗΣ ΔΕΜΑΤΟΣ" />

    <ImageButton
        android:id="@+id/usersArts"
        android:layout_width="72dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/twitchBtn"
        android:layout_marginBottom="31dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcherupload"
        android:text="@string/artmembersupload" />

    <ImageButton
        android:id="@+id/chatRoom"
        android:layout_width="102dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcherchat" />

    <ImageButton
        android:id="@+id/twitchBtn"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_alignBottom="@+id/artAnimeFacebook"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launchertwitch"
        android:text="@string/Twitch" />


</RelativeLayout>